*----------------------------------------------------------------------------*
 fonction d'erreur :  si le programme doit s'arreter


1/
int	fonction_truc()
{
	if (truc)
		return (fonction_erreur())
}

int	fonction_erreur()
{
	print(erreur);
	return()
}



2/
void	fonction_truc()
{
	if (truc)
		fonction_erreur()
}

void	fonction_erreur()
{
	print(erreur)
	exit();
}


3/
int	fonction_truc()
{
	if (truc)
		fonction_erreur()
	return (0);
}

void	fonction_erreur()
{
	print(erreur)
	exit();
}


